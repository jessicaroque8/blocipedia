<div class="page-header">
   <h1>Wiki Collaborators</h1>
   <h3><%= @wiki.title %></h3>
   <small><h4>Owner: <%= @wiki.owner.email %></h4></strong></small>
</div>

<div class="row">
   <div class="col-md-4">
      <ul>
         <% @wiki.collaborators.each do |c| %>
            <li>
               <% if c.owner == false %>
                  <%= link_to wiki_collaborator_path(@wiki, c), method: :delete, class: 'btn btn-danger' do %>
                     <i class="glyphicon glyphicon-remove"> </i>
                  <% end %>
                  <%= c.user.email %>
               <% end %>
            </li>
         <% end %>
      </ul>
   </div>

   <div class="col-md-8">
      <%= form_for @input, :url => wiki_collaborators_path do |i| %>

         <%= @errors.to_s %>

         <div class="form-group">
            <%= i.label :emails %>
            <%= i.text_area :emails, class: 'form-control', placeholder: "Enter your collaborators' emails separated by commas" %>
         </div>

         <%= i.submit "Add", class: 'btn btn-success' %>

      <% end %>
   </div>
</div>
