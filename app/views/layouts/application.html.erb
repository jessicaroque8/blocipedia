<!DOCTYPE html>
<html>
  <head>
    <title>Blocipedia</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <div class="container">

        <ul class="nav nav-tabs">

             <li><%= link_to "Home", root_path, class: 'pull-left' %></li>
             <li><%= link_to "Wikis", wikis_path, class: 'pull-left' %></li>
             <li><%= link_to "About", about_path, class: 'pull-left' %></li>

             <% if current_user != nil %>
               <li class="pull-right"><%= link_to "Settings", users_settings_path %></li>
               <li class="pull-right"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
            <% else %>
               <li class="pull-right"><%= link_to "Sign In", new_user_session_path %></li>
               <li class="pull-right"><%= link_to "Sign Up", new_user_registration_path %></li>
            <% end %>

        </ul>

        <div class="container">
           <% if flash[:notice] %>
              <div class="alert alert-success" role="alert">
                 <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                 <%= flash[:notice] %>
              </div>
           <% end %>

           <% if flash[:alert] %>
              <div class="alert alert-warning" role="alert">
                 <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                 <%= flash[:alert] %>
              </div>
           <% end %>

           <%= yield %>
        </div>


     </div>

  </body>
</html>
