<div class="page-header">
   <h1>Account Settings</h1>
</div>

<div class="row">
   <div class="col-md-8">
      <h4>Account Type: <%= current_user.role.capitalize %></h4>
         <% if current_user.role == 'standard' %>
            <p>Upgrade your account to view and make private wikis for $5.</p>
            <%= render :partial => 'charges/button', :controller => 'charges' %>
         <% elsif current_user.role == 'premium' %>
           <button type="button" class="btn btn-info btn-md" data-toggle="modal" data-target="#myModal">Downgrade Account</button>

           <div class="modal fade" id="myModal" role="dialog">
             <div class="modal-dialog">
                 <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                      <h4 class="modal-title">Are you sure you want to downgrade?</h4>
                    </div>
                    <div class="modal-body">
                      <p>This means that your private wikis will immediately become public.</p>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                      <%= link_to "Continue", downgrade_path, :method => :post, :class => 'btn btn-warning', 'data-dismiss' => 'modal' %>
                    </div>
                </div>
             </div>
           </div>
         <% end %>

   </div>
</div>
